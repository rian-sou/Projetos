#include <iostream>
using namespace std;

bool criancasSorrindo(bool Maria, bool Joao);

int main()
{
	bool Maria, Joao;

	cout << "Maria e Joao estao sorrindo ? digite respectivamente 1 para sim e 0 para nao "; //nessa parte eu crio uma interação com o usuario para que ele digite os "1" e "0"

	cin >> Maria >> Joao;

	bool Test = criancasSorrindo(Maria, Joao);

	cout << Test;

	return 0;
}

bool criancasSorrindo(bool Maria, bool Joao) // basicamente eu fiz uma função bool e fiz um if para cada situação do problema
{

	if (Maria == 1 && Joao == 1)
	{

		cout << "criancasSorrindo(true, true) -> true " << endl;
	}

	else if (Maria == 0 && Joao == 0)
	{

		cout << "criancasSorrindo(false, false) -> true " << endl;
	}

	else if (Maria == 1 && Joao == 0)
	{

		cout << "criancasSorrindo(true, false) -> false" << endl;
	}
}

