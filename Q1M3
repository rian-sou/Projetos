#include <iostream> // vou ser sincero, esse codigo faz muito mais sentido na minha cabeça
using namespace std;

struct Ponto{
 int x;
 int y;
 int R,R2;
};


int main() {
Ponto p1;
Ponto V1,V2;

cout << "Por favor, digite os vertices do retangulo" << endl;
cin >> V1.R >> V2.R2;
cout << "Agora por favor, digite os valores do ponto (x e y";
cout << " respectivamente)";
cin >> p1.x >> p1.y;

if (V1.R >= p1.x && V2.R2 >=p1.y){

cout << "O ponto está dentro do retangulo" << endl;

}

else cout << "O ponto nao esta dentro do retangulo" << endl;





  return 0;
}
